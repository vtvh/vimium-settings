  "version": "2.0.0",
  "tasks": [
    {
      "label": "Export to Chrome",
      "type": "shell",
      "command": "./scripts/export.sh",
      "presentation": {
        "reveal": "silent"
      },
      "promptOnClose": false,
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Import from Chrome",
      "type": "shell",
      "command": "./scripts/import.sh",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "promptOnClose": false,
      "problemMatcher": []
    },
    {
      "label": "Test - Dump export",
      "type": "shell",
      "command": "./tests/dump-export.sh",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Open Vimium repo on Github",
      "type": "shell",
      "command": "chrome https://github.com/philc/vimium",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "Open Vimium changelog",
      "type": "shell",
      "command": "chrome https://github.com/philc/vimium/blob/master/CHANGELOG.md",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "Open Vimium Wiki",
      "type": "shell",
      "command": "chrome https://github.com/philc/vimium/wiki",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "Open Vimium in Chrome extensions option",
      "type": "shell",
      "command": "chrome chrome-extension://dbepggeogbaibhgnhhndojpepiihcmeb/pages/options.html",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    }
  ]
}
